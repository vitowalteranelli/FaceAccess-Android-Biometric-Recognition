<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="#f5f5f5">
     <!--  android:background="#2cb2d9" -->
	<!--  
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
	-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camera_preview"
        android:background="@drawable/rounded"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" >
    </FrameLayout>
    
      <EditText
        android:id="@+id/provaform"
        
        android:background="@drawable/formbackground"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:layout_centerHorizontal="true" 
        android:gravity="center_horizontal"
		android:maxLines="1"
		android:hint="username"
		android:maxLength="50"
		android:singleLine="true"
		android:maxWidth="100dip"    
		android:textColor="#636363"    
        android:ems="10" >

        <requestFocus />
    </EditText>
    
              <EditText
        android:id="@+id/password"
        
        android:background="@drawable/formbackground"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true" 
		android:maxLines="1"
		android:hint="password"  
		android:textColor="#636363"    
		android:maxLength="50"
		android:singleLine="true"
		android:maxWidth="100dip"   
		android:gravity="center_horizontal"
        android:inputType="textPassword"     
        android:ems="10" >

        <requestFocus />
    </EditText>
      
    
      <EditText
        android:id="@+id/firstnameform"
        
        android:background="@drawable/formbackground"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true" 
        android:gravity="center_horizontal"
		android:maxLines="1"
		android:hint="firstname"
		android:maxLength="50"
		android:singleLine="true"
		android:maxWidth="100dip"    
		android:textColor="#636363"    
        android:ems="10" >

        <requestFocus />
    </EditText>
    
  <EditText
        android:id="@+id/lastnameform"
        
        android:background="@drawable/formbackground"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true" 
        android:gravity="center_horizontal"
		android:maxLines="1"
		android:hint="lastname"
		android:maxLength="50"
		android:singleLine="true"
		android:maxWidth="100dip"    
		android:textColor="#636363"    
        android:ems="10" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/mailform"
        
        android:background="@drawable/formbackground"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true" 
        android:gravity="center_horizontal"
		android:maxLines="1"
		android:hint="mailaddress"
		android:maxLength="50"
		android:singleLine="true"
		android:maxWidth="100dip"    
		android:textColor="#636363"    
        android:ems="10" >

        <requestFocus />
    </EditText>
    


        
    <ImageButton
      android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" 
        android:layout_width="50dp"
        android:layout_height="50dp" 
        android:background="@drawable/button_enter_sel"
        android:onClick="postDataMulti2" />
    
    
    <ImageButton
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginRight="100dp"
        android:layout_toLeftOf="@+id/button1"
        android:background="@drawable/photo_sel"
        android:onClick="reset" />
    
            <ImageButton
        android:id="@+id/button3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/wand_sel"
        android:onClick="preprocess" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camera_preview"
        android:layout_below="@+id/camera_preview"
        android:layout_marginTop="30dp"
        android:background="#FFa8c600" android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
		android:background="@drawable/background"
        android:layout_marginTop="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="28dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />



</RelativeLayout>